@model LibMan_Core.ViewModels.BookFormViewModel


@{
    ViewData["Title"] = "BookForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.BookFormPageTitle</h2>

<form asp-controller="Books" asp-action="Save"  enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <input asp-for="Book.Author" class="form-control" />
        <span asp-validation-for="Book.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Publisher"></label>
        <input asp-for="Book.Publisher" class="form-control" />
        <span asp-validation-for="Book.Publisher" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.YearPublished"></label>
        <input asp-for="Book.YearPublished" class="form-control" />
        <span asp-validation-for="Book.YearPublished" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.NumberInStock"></label>
        <input asp-for="Book.NumberInStock" class="form-control" />
        <span asp-validation-for="Book.NumberInStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Page"></label>
        <input asp-for="Book.Page" class="form-control" />
        <span asp-validation-for="Book.Page" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.CategoryId"></label>
        <select asp-for="Book.CategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))" class="form-control"><option value="">Please select category of the book</option></select>
        <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.ImageFile"></label>
        <br />
        @if (Model.BookFormPageTitle == "New Book") //New Book
        {
            <br />
            <input asp-for="Book.ImageFile" accept="image/*" />
            <span asp-validation-for="Book.ImageFile" class="text-danger"></span>
        }
        else //Edit Book
        {
            @if (Model.Book.ImageName != null) //Has Photo
            {
                <img src="@("~/image/"+Model.Book.ImageName)" asp-append-version="true" height="250" />
                <br />
                <p>Do you want to delete the current image?</p>
                <label><input asp-for="DeleteImage" value="1" type="radio" />Yes</label>
                <label><input asp-for="DeleteImage" value="0" type="radio" />No</label>
            }
            else //Withot Photo
            {
                <p>No Image Uploaded</p>
            }
            <br />
            <input asp-for="Book.ImageFile" accept="image/*" />
            <span asp-validation-for="Book.ImageFile" class="text-danger"></span>
        }

    </div>
    <input asp-for="Book.BookId" type="hidden" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>


