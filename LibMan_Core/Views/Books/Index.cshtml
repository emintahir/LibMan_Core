@model IEnumerable<Book>
@{
    ViewData["Title"] = "List of Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Books</h2>

<br />
@if (!Model.Any())
{
    <p>No book is registered in your database.</p>
    <a type="button" class="btn btn-primary" asp-action="New" asp-controller="Books">Insert New Book</a>
}
else
{
    <table id="books" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.Publisher)</th>
                <th>@Html.DisplayNameFor(model => model.YearPublished)</th>
                <th>@Html.DisplayNameFor(model => model.DateAddedToLibrary)</th>
                <th>@Html.DisplayNameFor(model => model.Page)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.ImageFile)</th>
                <th>Modify</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Publisher</td>
                <td>@book.YearPublished</td>
                <td>@book.DateAddedToLibrary.ToShortDateString()</td>
                <td>@book.Page</td>
                <td>@book.Category.CategoryName</td>
                <td>
                    @if (book.ImageName != null)
                    {
                        <img src="@("~/image/"+book.ImageName)" asp-append-version="true" height="50" />
                    }
                    else
                    {<p>No Image Uploaded</p>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Books" asp-route-id="@book.BookId">Details</a> /
                    <a asp-action="Edit" asp-controller="Books" asp-route-id="@book.BookId">Edit</a> /
                    <a asp-action="Delete" asp-controller="Books" asp-route-id="@book.BookId" onclick="javascript:return confirm('Are you sure you want to delete this Book?');">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <p>
        <a type="button" class="btn btn-primary" asp-action="New" asp-controller="Books">Insert New Book</a>
    </p>
}


@section scripts
{
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $("#books").DataTable();
        });
    </script>
}

